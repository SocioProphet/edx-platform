<% if (message && show) { %>
<div class="wrapper wrapper-notification wrapper-notification-mini is-showing wrapper-notification-status"
       id="notification-mini" aria-hidden="true" aria-labelledby="notification-mini-title" tabindex="-1">
  <div class="notification mini">
    <i class="feedback-symbol fa fa-cog"></i>
    <div class="copy">
      <h2 class="title title-3" id="notification-mini-title">
          <%= message %>
      </h2>
    </div>
  </div>
</div>
<% } %>
